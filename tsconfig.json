{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "paths": {
            "@erpel/*": ["src/*"],
            "@erpel/resources/*": ["resources/*"]
        }
    }
}
